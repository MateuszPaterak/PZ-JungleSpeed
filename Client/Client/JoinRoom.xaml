<Window x:Class="Client.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Dołącz do pokoju" Height="350" Width="500">
    <Grid>
        <ListView x:Name="lVListOfRoom" HorizontalAlignment="Left" Height="267" Margin="10,43,0,0" VerticalAlignment="Top" Width="148">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lVListOfPlayer" HorizontalAlignment="Left" Height="267" Margin="175,43,0,0" VerticalAlignment="Top" Width="153">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="267" Margin="163,43,0,0" VerticalAlignment="Top" Width="7"/>
        <GridSplitter x:Name="gridSplitter1" HorizontalAlignment="Left" Height="267" Margin="333,43,0,0" VerticalAlignment="Top" Width="8"/>
        <ListView x:Name="lVListOfPlayerToStart" HorizontalAlignment="Left" Height="267" Margin="346,43,0,0" VerticalAlignment="Top" Width="136">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <Button x:Name="btJoinToRoom" Content="Dołącz do pokoju" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111"/>
        <Button x:Name="btJoinToGame" Content="Dołącz do gry" HorizontalAlignment="Left" Margin="300,10,0,0" VerticalAlignment="Top" Width="102"/>
        <Button x:Name="btExitFromGame" Content="Wypisz się" HorizontalAlignment="Left" Margin="407,10,0,0" VerticalAlignment="Top" Width="75"/>
        <Button x:Name="btExitFromRoom" Content="Wypisz z pokoju" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
