<Window x:Class="Client.JoinRoom"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Dołącz do pokoju" Height="500" Width="800"
        WindowStyle="ToolWindow">
    <Grid>
        <ListView x:Name="lVListOfRoom" HorizontalAlignment="Left" Height="352" Margin="10,108,0,0" VerticalAlignment="Top" Width="220">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lVListOfPlayer" HorizontalAlignment="Left" Height="352" Margin="288,108,0,0" VerticalAlignment="Top" Width="220">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <ListView x:Name="lVListOfPlayerToStart" HorizontalAlignment="Left" Height="352" Margin="555,108,0,0" VerticalAlignment="Top" Width="220">
            <ListView.View>
                <GridView>
                    <GridViewColumn/>
                </GridView>
            </ListView.View>
        </ListView>
        <GridSplitter x:Name="gridSplitter" HorizontalAlignment="Left" Height="393" Margin="256,67,0,0" VerticalAlignment="Top" Width="7"/>
        <GridSplitter x:Name="gridSplitter1" HorizontalAlignment="Left" Height="393" Margin="528,67,0,0" VerticalAlignment="Top" Width="8"/>
        <Button x:Name="btJoinToRoom" Content="Dołącz do pokoju" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" Width="111" Click="btJoinToRoom_Click"/>
        <Button x:Name="btJoinToGame" Content="Dołącz do gry" HorizontalAlignment="Left" Margin="593,10,0,0" VerticalAlignment="Top" Width="102" Click="btJoinToGame_Click"/>
        <Button x:Name="btExitFromGame" Content="Wypisz się" HorizontalAlignment="Left" Margin="700,10,0,0" VerticalAlignment="Top" Width="75" Click="btExitFromGame_Click"/>
        <Button x:Name="btExitFromRoom" Content="Wypisz z pokoju" HorizontalAlignment="Left" Margin="126,10,0,0" VerticalAlignment="Top" Width="110" Click="btExitFromRoom_Click"/>
        <Label x:Name="label" Content="Lista pokoi:" HorizontalAlignment="Left" Margin="10,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label1" Content="Lista graczy w pokoju:" HorizontalAlignment="Left" Margin="288,77,0,0" VerticalAlignment="Top"/>
        <Label x:Name="label2" Content="Lista graczy biorących udział:" HorizontalAlignment="Left" Margin="563,77,0,0" VerticalAlignment="Top"/>

    </Grid>
</Window>
