<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Wojna o totem" Height="700" Width="900">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                <GradientStop Color="Black" Offset="1"/>
                <GradientStop Color="#FF6CAE59" Offset="0.443"/>
                <GradientStop Color="Black" Offset="0.013"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Menu x:Name="Menu" HorizontalAlignment="Left" Height="25" VerticalAlignment="Top" Width="900">
            <MenuItem Header="Rozgrywka">
                <MenuItem Header="Utwórz nowy pokój" Click="NewRoom"></MenuItem>
                <MenuItem Header="Dołącz do pokoju" Click="JoinToRoom"></MenuItem>
            </MenuItem>
            <MenuItem Header="Pomoc">
            </MenuItem>
        </Menu>
        <ContentControl x:Name="CUserControl" Grid.Row="0" Margin="10,35,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Height="500" Width="500"/>
        <Button x:Name="BtGetUpCard" Content="Podnieś &#xD;&#xA;kartę" HorizontalAlignment="Left" Margin="535,48,0,0" VerticalAlignment="Top" Width="80" Height="50" Click="BtGetUpCard_Click"/>
        <Button x:Name="BtGetTotem" Content="Weź&#xD;&#xA;totem" HorizontalAlignment="Left" Margin="535,130,0,0" VerticalAlignment="Top" Width="80" Height="50" Click="BtGetTotem_Click"/>
        <Button x:Name="BtOutOfGameplay" Content="Opuść&#xD;&#xA;rozgrywkę" HorizontalAlignment="Left" Margin="535,275,0,0" VerticalAlignment="Top" Width="80" Height="50" Click="BtOutOfGameplay_Click"/>
        <ListView x:Name="ListView" HorizontalAlignment="Left" Height="277" Margin="637,48,0,0" VerticalAlignment="Top" Width="239">
            <ListView.View>
                <GridView>
                    <GridViewColumn  x:Name="Column1" Header="Nazwa gracza:"/>
                    <GridViewColumn  x:Name="Column2" Header="Liczba pozostałych kart:"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
