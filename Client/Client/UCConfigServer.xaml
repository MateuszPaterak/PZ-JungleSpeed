<UserControl x:Class="Client.UCConfigServer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Client"
             mc:Ignorable="d" 
             d:DesignHeight="500" d:DesignWidth="500">
    <Grid>
        <TextBox x:Name="TbIpAddress" HorizontalAlignment="Left" Height="23" Margin="32,74,0,0" TextWrapping="Wrap" Text="127.0.0.1" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="BtChangeIp" Content="Zmień adres IP" HorizontalAlignment="Left" Margin="32,115,0,0" VerticalAlignment="Top" Width="120" Click="BtChangeIp_Click"/>
        <Label x:Name="LAddress" Content="Adres IP serwera:" HorizontalAlignment="Left" Margin="32,34,0,0" VerticalAlignment="Top" Background="#FF6E6969" Width="120"/>
    </Grid>
</UserControl>
